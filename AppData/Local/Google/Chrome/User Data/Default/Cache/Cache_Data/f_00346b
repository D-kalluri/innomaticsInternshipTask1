        <script>
        function visCounters() {
            $.ajax({
                type: "post",
                url: "visitorCounts",
                cache: false,
                async: false,
                success: function (result)
                {
                    var val = JSON.parse(result);
                    //alert(val[0].visitors);
                    document.getElementById("scount").innerHTML = "<h4><span style='color:#615a5a;font-weight:900;font-family: 'Montserrat', sans-serif;text-shadow: -9px 2px 13px #fefffe;'>&nbsp;&nbsp;Site Visited &nbsp;&nbsp;</span><span style='color:#841111;text-shadow: -9px 2px 13px #fefffe;font-weight:900;font-family: 'Montserrat', sans-serif;'>"+val[0].visitors+"</span> <span style='color:#615a5a;text-shadow: -9px 2px 13px #fefffe;font-weight:900;font-family: 'Montserrat', sans-serif'>&nbsp;times,&nbsp;&nbsp;Logged Users: &nbsp;&nbsp;</span><span style='color:#841111;font-weight:900;font-family: 'Montserrat', sans-serif;text-shadow: -9px 2px 13px #fefffe;'>"+val[0].login_count+"</span> <span style='color:#615a5a;text-shadow: -9px 2px 13px #fefffe;font-weight:900;font-family: 'Montserrat', sans-serif'>&nbsp; till date&nbsp; and Active Users: <font color='green' size='4'>"+val[0].active_users+"</font></span> </h4>";
                    $("#scounter").show();
                },
                error: function (error) {   alert("error" + error);     }
            });
            return false;
        }
    </script>
